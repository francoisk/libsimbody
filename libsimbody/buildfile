intf_libs = # Interface dependencies.
impl_libs = # Implementation dependencies.
#import xxxx_libs += libhello%lib{hello}

lib{simbody}: {hxx ixx txx cxx}{**} $impl_libs $intf_libs

# Build options.
#
cxx.poptions =+ "-I$out_root" "-I$src_root"

#obja{*}: cxx.poptions += -DLIBSIMBODY_STATIC_BUILD
#objs{*}: cxx.poptions += -DLIBSIMBODY_SHARED_BUILD

# Export options.
#
lib{simbody}:
{
  cxx.export.poptions = "-I$out_root" "-I$src_root"
  cxx.export.libs = $intf_libs
}

#liba{simbody}: cxx.export.poptions += -DLIBSIMBODY_STATIC
#libs{simbody}: cxx.export.poptions += -DLIBSIMBODY_SHARED

# For pre-releases use the complete version to make sure they cannot
# be used in place of another pre-release or the final version. See
# the version module for details on the version.* variable values.
#
if $version.pre_release
  lib{simbody}: bin.lib.version = "-$version.project_id"
else
  lib{simbody}: bin.lib.version = "-$version.major.$version.minor"

# Install into the libsimbody/ subdirectory of, say, /usr/include/
# recreating subdirectories.
#
{hxx ixx txx}{*}:
{
  install         = include/libsimbody/
  install.subdirs = true
}
